{
    "manifest_version": 3,
    "name": "React DOM Automator",
    "version": "1.0.0",
    "description": "Automate DOM interactions with sequential batch processing",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}